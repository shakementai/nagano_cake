<div class="container">
  <h3 class="px-3 mb-5" style="width: fit-content; background-color: #e6e6e6;">注文履歴詳細</h3>
  <table>
    <tbody>
      <tr>
        <td><span class="mr-5">購入者</span></td>
        <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
      </tr>
      <tr>
        <td><span class="mr-5">注文日</span></td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <td><span class="mr-5">配送先</span></td>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <td><span class="mr-5">支払方法</span></td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <td><span class="mr-5">注文ステータス</span></td>
        <td>
          <%= @order.order_status_i18n %>
        </td>
      </tr>
    </tbody>
  </table>
</div>