<div class="container">
  <h3 class="px-3 mb-5" style="width: fit-content; background-color: #e6e6e6;">注文履歴詳細</h3>
  <table class="mb-3">
    <tbody>
      <tr>
        <td><span class="mr-5">購入者</span></td>
        <td style="text-decoration: underline;">
          <%= link_to admin_customer_path(@order.customer), class: "text-dark" do %>
            <%= @order.customer.last_name %><%= @order.customer.first_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><span class="mr-5">注文日</span></td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <td><span class="mr-5">配送先</span></td>
        <td>
          〒<%= @order.post_code %> <%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <td><span class="mr-5">支払方法</span></td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <td><span class="mr-5">注文ステータス</span></td>
        <td>
          <%= form_with model: [:admin, @order] do |f| %>
            <%= f.collection_select :order_status, Order.order_statuses_i18n, :first, :last %>
            <%= f.submit "更新", class: "btn btn-success ml-5" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <table class="table table-hover">
    <thead style= "width: fit-content; background-color: #efefef;">
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody class="table table-borderless">
      <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.item.with_tax_price.to_s(:delimited) %></td>
          <td><%= order_item.amount %></td>
          <td><%= (order_item.item.with_tax_price * order_item.amount).to_s(:delimited) %></td>
          <td>
            <%= form_with model: [:admin, @order] do |f| %>
              <%= f.collection_select :order_status, Order.order_statuses_i18n, :first, :last %>
              <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>