<div class="container">
  <h3 class="px-3" style= "width: fit-content; background-color: #e6e6e6;">ジャンル一覧・追加</h1>
  <div class="my-5">
    <%= form_with model: [:admin, @genre] do |f| %>
      <span class="mr-5">ジャンル名</span>
      <%= f.text_field :name, placeholder:"ジャンル名" %>
      <%= f.submit "新規登録", class: "ml-5 btn btn-success" %>
    <% end %>
  </div>
  <table class="table table-hover table-inverse" style="width: fit-content; padding: 50px;">
    <thead>
      <tr>
        <th class="mx-5">ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>