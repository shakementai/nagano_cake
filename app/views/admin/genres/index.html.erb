<div class="container">
  <h3 class="px-3" style="width: fit-content; background-color: #e6e6e6;">ジャンル一覧・追加</h3>
  <div class="my-5">
    <%= form_with model: [:admin, @genre] do |f| %>
      <%= render 'layouts/errors', obj: @genre %>
      <span class="mr-5">ジャンル名</span>
      <%= f.text_field :name, placeholder:"ジャンル名" %>
      <%= f.submit "新規登録", class: "ml-5 btn btn-success" %>
    <% end %>
  </div>
  <table class="table table-hover" style="width: 400px;">
    <thead style="background-color: #efefef;">
      <tr>
        <th colspan="2" class="pl-5">ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
