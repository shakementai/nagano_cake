<div class="container">
  <h4><span class="py-2 px-4 bg-light">ジャンル一覧・追加</span></h4>
  <div class="my-5">
    <%= form_with model: [:admin, @genre] do |f| %>
      <%= render 'layouts/errors', obj: @genre %>
      <span class="mr-5">ジャンル名</span>
      <%= f.text_field :name, placeholder:"ジャンル名" %>
      <%= f.submit "新規登録", class: "ml-5 btn btn-success" %>
    <% end %>
  </div>
  <table class="table table-hover" style="width: 350px">
    <thead style="background-color: #efefef;">
      <tr>
        <th class="text-center">ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
