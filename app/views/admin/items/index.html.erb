<div class="container">
  <h3 class="px-3" style= "width: fit-content; background-color: #e6e6e6;">商品一覧</h3>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.without_tax %></td>
        <td><%= item.genre_id.name %></td>
        <td><%= item.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</table>