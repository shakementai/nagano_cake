<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'public/homes/genre_list', genres: @genres %>
    </div>

    <div class="col-10">

      <h2 class="mb-4"><%= @genre.name %>一覧<span class="small">(全<%= @genre_items.count %>件)</span></h2>

      <div class="d-flex flex-wrap mb-2">
        <% @genre_items.each do |item| %>
          <%= link_to item_path(item.id) do %>
            <div class="mr-3 mb-5">
              <div style="height: 145px;"><%= image_tag item.get_image(200,150) %></div>
              <div><%= item.name %></div>
              <div>¥<%= item.with_tax_price.to_s(:delimited) %></div>
            </div>
          <% end %>
        <% end %>
      </div>

      <%= paginate @genre_items %>

    </div>
  </div>
</div>