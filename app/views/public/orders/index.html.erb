<div class="container">
  <h3 class="px-3 mb-5" style="width: fit-content; background-color: #e6e6e6;">注文履歴一覧</h3>
  <table class="table table-bordered">
    <thead style="background-color: #efefef;">
      <tr>
        <th class="border">注文日</th>
        <th class="border">配送先</th>
        <th class="border">注文商品</th>
        <th class="border">支払金額</th>
        <th class="border">ステータス</th>
        <th class="border">注文詳細</th>
      </tr>
    </thead>
    <tbody class="text-left">
      <% @orders.each do |order| %>
      <tr>
        <td class="align-middle"><%= order.created_at %></td>
        <td class="align-middle">
          <%= order.post_code %><br><%= order.address %><br><%= order.name %>
        </td>
        <td class="align-middle"><%=  %></td>
        <td class="align-middle"><%= order.total_price %></td>
        <td class="align-middle"><%= order.order_status  %></td>
        <td class="align-middle"><%= link_to "表示する", order_path %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>