<h3>注文情報確認</h3>

<table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th >数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><span class="mr-3"><%= image_tag cart_item.item.get_image(50, 50) %></span><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% @total_plice += cart_item.subtotal %>
        <% end %>
      </tbody>
    </table>
    <table class="col-3 float-right border border-dark" style="height: 60px;">
      <tr>
        <th>送料</th>
        <td>800</td>
      </tr>
      <tr class="">
        <th class="p-1 table-secondary border border-dark">合計金額</th>
        <td class="p-1" style="width: 50%;"><%= @total_plice.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td><%= @total_plice + 800.to_s(:delimited) %></td>
      </tr>
    </table>

