<h3>注文情報確認</h3>

<table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th >数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><span class="mr-3"><%= image_tag cart_item.item.get_image(50, 50) %></span><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% @total_price += cart_item.subtotal %>
        <% end %>
      </tbody>
    </table>
    <table class="col-3 float-right border border-dark" style="height: 60px;">
      <tr>
        <th>送料</th>
        <td>800</td>
      </tr>
      <tr class="">
        <th class="p-1 table-secondary border border-dark">合計金額</th>
        <td class="p-1" style="width: 50%;"><%= @total_price.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td><%= (@total_price + 800).to_s(:delimited) %></td>
      </tr>
    </table>

    <h3>支払方法</h3>
      <%= @order.payment_method_i18n %>
    <h3>お届け先</h3>
      <div><%= '〒' + @order.post_code + ' ' +  @order.address %></div>
      <div><%= @order.name %></div>

      <%= form_with model: @order do |f| %>
        <%= f.hidden_field :customer_id, value: current_customer.id %>
        <%= f.hidden_field :post_code, value: @order.post_code %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :name, value: @order.name %>
        <%= f.hidden_field :payment_method, value: @order.payment_method %>
        <%= f.hidden_field :shipping_cost, value: 800 %>
        <%= f.hidden_field :total_price, value: @total_price + 800 %>
        <%= f.hidden_field :order_status, value: @order.order_status  %>
        <%= f.submit "注文を確定する" %>
      <% end %>