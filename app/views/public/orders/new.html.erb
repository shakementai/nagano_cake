  <div class="row">
    <div class="col-md-2 offset-md-1 mb-3">
      <h4 class="text-center bg-light">注文情報入力</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 ml-5">
      <h5 class="font-weight-bold">支払方法</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 ml-5">
      <%= form_with model: @order, url: confirm_path do |f| %>
      <div class="ml-4">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      </div>
      <div class="ml-4 mb-3">
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
      </div>
      <h5 class="font-weight-bold">お届け先</h5>
      <div class="ml-4">
        <%= f.radio_button :select_address, 0 %>
        <%= f.label :select_address, "ご自身の住所" %>
        <div class="ml-3"><%= '〒' + current_customer.post_code + ' ' + current_customer.address + '　' + current_customer.last_name + current_customer.first_name %></div>
      </div>
      <div class="ml-4">
        <%= f.radio_button :select_address, 1 %>
        <%= f.label :select_address, "登録済住所から選択" %>
        <div class="ml-3"><%= f.select :delivery_id, options_from_collection_for_select(@deliveries, :id, :address_display) %></div>
      </div>
      <div class="ml-4">
        <%= f.radio_button :select_address, 2 %>
        <%= f.label :select_address, "新しいお届け先" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 ml-5">
      <table class="table table-borderless ml-4">
        <tr>
          <td width="15%"><span>郵便番号(ハイフンなし)</span>
          <td width="85%"><%= f.text_field :post_code, placeholder: "0000000", class: "form-control", style: "width: 25%;" %></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td><%= f.text_field :address,  placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control", style: "width: 50%;" %></td>
        </tr>
        <tr>
          <td><%= f.label :name, "宛名" %></td>
          <td><%= f.text_field :name, placeholder: "令和道子", class: "form-control", style: "width: 25%;" %></td>
        </tr>
      </table>
    </div>
  </div>
      
      <div class="text-center">
        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
    </div>




