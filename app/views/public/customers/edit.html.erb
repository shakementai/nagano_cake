<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-1 mb-5">
      <h4 class="text-center bg-light">会員情報編集画面</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @customer, url: information_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><span>氏名</span></td>
            <td><%= f.text_field :last_name, style: "border-radius: 8px;" %></td>
            <td><%= f.text_field :first_name, style: "border-radius: 8px;" %></td>
          </tr>
          <tr>
            <td><span>フリガナ</span></td>
            <td><%= f.text_field :last_kana_name, style: "border-radius: 8px;" %></td>
            <td><%= f.text_field :first_kana_name, style: "border-radius: 8px;" %></td>
          </tr>
          <tr>
            <td><span>郵便番号</span></td>
            <td><%= f.text_field :post_code, style: "border-radius: 8px;" %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="3"><%= f.text_field :address, size: "65x30", style: "border-radius: 8px;" %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number, style: "border-radius: 8px;" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, style: "border-radius: 8px;" %></td>
          </tr>
          <tr>
            <td></td>
            <td colspan="2"><%= f.submit "編集内容を保存", class: "btn btn-success", style: "width: 280px;" %></td>
            <td><%= link_to "退会する", unsubscribe_path(@customer.id), class: "btn btn-danger" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>