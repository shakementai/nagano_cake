<div class="container">

  <h4><span class="py-2 px-4 bg-light">会員情報編集画面</span></h4>
  
  <div class="row mt-5">
    <div class="col-md-8">
      <%= form_with model: @customer, url: information_path, method: :patch do |f| %>
      <%= render "layouts/errors", obj: @customer %>
        <table class="table table-borderless table-sm">
          <tr>
            <td class="align-middle"><span>氏名</span></td>
            <td width="35%"><%= f.text_field :last_name, style: "border-radius: 8px;", class: "form-control" %></td>
            <td width="10%"></td>
            <td width="35%"><%= f.text_field :first_name, style: "border-radius: 8px;", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle"><span>フリガナ</span></td>
            <td><%= f.text_field :last_kana_name, style: "border-radius: 8px;", class: "form-control" %></td>
            <td></td>
            <td><%= f.text_field :first_kana_name, style: "border-radius: 8px;", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle"><span>郵便番号</span></td>
            <td><%= f.text_field :post_code, style: "border-radius: 8px;", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle">住所</td>
            <td colspan="4"><%= f.text_field :address, size: "75x30", style: "border-radius: 8px;", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle">電話番号</td>
            <td><%= f.text_field :phone_number, style: "border-radius: 8px;", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle">メールアドレス</td>
            <td><%= f.text_field :email, style: "border-radius: 8px;", class: "form-control" %></td>
          </tr>
          <tr>
            <td></td>
            <td colspan="2"><%= f.submit "編集内容を保存", class: "btn btn-success mt-3", style: "width: 280px;" %></td>
            <td><%= link_to "退会する", unsubscribe_path(@customer.id), class: "btn btn-danger mt-3" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>