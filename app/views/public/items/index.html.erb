<div class="container">
  <div class="row">
    <div class="col-2">
      <p>ジャンル検索</p>
    </div>

    <div class="col-10">

      <h2 class="mb-4">商品一覧(全<%= @items_all.count %>件)</h2>

      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <%= link_to item_path(item.id) do %>
            <table class="mr-4">
              <tbody>
                <tr>
                  <td><%= image_tag item.image, size:"200x130" %></td>
                </tr>
                <tr>
                  <td><%= item.name %></td>
                </tr>
                <tr>
                  <td>¥<%= item.with_tax_price.to_s(:delimited) %></td>
                </tr>
              </tbody>
            </table>
          <% end %>
        <% end %>
      </div>

      <%= paginate @items %>

    </div>
  </div>
</div>